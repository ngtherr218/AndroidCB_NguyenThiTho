<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài 1: Animal Sound"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_b2"
        tools:layout_editor_absoluteX="30dp" />
    <Button
        android:id="@+id/btn_b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Bài 2: Custom progressbar"
        app:layout_constraintBottom_toTopOf="@+id/btn_b3"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/btn_b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Bài 3: Cuộc gọi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.575" />


</androidx.constraintlayout.widget.ConstraintLayout>